@model Application

<h2>Movie Entries</h2>

<form method="post">
    <input type="hidden" asp-for="MovieId" />

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" type="text" maxlength="25" required/>
    <br /><br />
    <label asp-for="Year">Year:</label>
    <input asp-for="Year" type="number" min="0" max="9999" maxlength="4" required/>
    <br /><br />
    <select asp-for="CategoryId">
        <option value="">Select a movie category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br /><br />
    <label asp-for="Director">Director:</label>
    <input asp-for="Director" type="text" maxlength="25" required />
    <br /><br />
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating" required>
        <option value="" disabled selected style="display:none;">Select One</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br /><br />
    <label asp-for="Edited">Edited:</label>
    <select asp-for="Edited">
        <option value="" disabled selected style="display:none;">Select One</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br /><br />
    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo" type="text" maxlength="25" />
    <br /><br />
    <label asp-for="CopiedToPlex">Copied To Plex:</label>
    <select asp-for="CopiedToPlex">
        <option value="" disabled selected style="display:none;">Select One</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br /><br />
    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" type="text" />
    <br /><br />
    <button type="submit">Input Movie</button>
</form>